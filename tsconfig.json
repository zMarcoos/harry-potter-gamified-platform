{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES6"
	},
	"exclude": ["node_modules"],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"app/.next/types/**/*.ts",
		"next-env.d.ts",
		".next/types/**/*.ts"
	]
}
